{
    "groups": {
        "shared": {
            "packages": ["package.json", "src/shared/package.json"],
            "ignore": ["redux-persist", "react"]
        },
        "desktop": {
            "packages": ["src/desktop/package.json"],
            "ignore": ["electron-updater", "react-markdown"]
        },
        "mobile": {
            "packages": ["src/mobile/package.json", "src/mobile/nodejs-assets/nodejs-project/package.json"],
            "ignore": [
                "react-native",
                "react",
                "react-native-keychain",
                "babel-jest",
                "babel-preset-react-native",
                "jest",
                "react-test-renderer",
                "rn-nodeify",
                "asyncstorage-down",
                "browserify-zlib",
                "buffer",
                "constants-browserify",
                "https-browserify",
                "os-browserify",
                "timers-browserify",
                "tty-browserify",
                "url"
            ]
        }
    }
}
