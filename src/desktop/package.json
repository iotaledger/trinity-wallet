{
  "name": "iota-desktop-wallet",
  "productName": "Trinity",
  "version": "0.1.5",
  "url": "https://trinity-alpha.iota.org",
  "homepage": "https://trinity-alpha.iota.org",
  "description": "IOTA desktop wallet",
  "main": "main.js",
  "author": "IOTA Foundation <contact@iota.org>",
  "moduleRoots": [
    ".",
    "src",
    "../shared"
  ],
  "scripts": {
    "start": "concurrently --kill-others \"npm run devserver\" \"cross-env NODE_ENV=development electron main.js\"",
    "electron": "electron main.js",
    "devserver": "node server.js",
    "styleguide": "cross-env BUILD_TARGET=styleguide node server.js",
    "build": "rm -rf ./dist && cross-env NODE_ENV=production webpack --env=production --config webpack.config",
    "build:styleguide": "rm -rf ./dist && cross-env NODE_ENV=production BUILD_TARGET=styleguide webpack --env=production --config webpack.config",
    "compile": "npm run compile:linux && npm run compile:mac && npm run compile:win",
    "compile:linux": "npm run build && electron-builder --linux --x64 --ia32",
    "compile:mac": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --x64",
    "compile:win": "npm run build && electron-builder --win --x64 --ia32",
    "compile:win64": "npm run build && electron-builder --win --x64",
    "compile:win32": "npm run build && electron-builder --win --x32"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-rebuild": "^1.7.3",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "i18next": "^11.2.3",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-loader": "^2.1.4",
    "postcss-nested": "^3.0.0",
    "postcss-normalize": "^4.0.0",
    "qrcode.react": "^0.8.0",
    "react": "^16.3.2",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.3.2",
    "react-error-overlay": "^4.0.0",
    "react-i18next": "^7.6.0",
    "react-qr-reader": "^2.1.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "sjcl": "^1.0.7",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-bugsnag-plugins": "^1.1.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.22.1",
    "worker-loader": "^1.1.1"
  },
  "build": {
    "productName": "Trinity",
    "copyright": "IOTA Foundation",
    "directories": {
      "buildResources": "./assets",
      "output": "./out"
    },
    "appId": "com.iotatoken.trinity",
    "asar": true,
    "protocols": [
      {
        "name": "IOTA URL Scheme",
        "schemes": [
          "iota"
        ]
      }
    ],
    "dmg": {
      "iconSize": 120,
      "title": "${productName}",
      "contents": [
        {
          "x": 520,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 170,
          "y": 250,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.finance"
    }
  },
  "dependencies": {
    "authenticator": "^1.1.4",
    "bugsnag-js": "^4.6.0",
    "bugsnag-react": "^1.1.1",
    "curl.lib.js": "^1.0.22",
    "date-fns": "^1.29.0",
    "electron-settings": "^3.1.4",
    "keytar": "^4.2.1",
    "machine-uuid": "^1.2.0",
    "perfect-scrollbar": "^1.3.0",
    "react-lottie": "^1.1.0",
    "react-markdown": "^3.3.0",
    "react-textarea-autosize": "^6.1.0",
    "react-transition-group": "^2.3.1",
    "recharts": "^1.0.0-beta.10"
  }
}
