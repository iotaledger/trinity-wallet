{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true,
            "arrowFunctions": true,
            "classes": true,
            "spread": true
        },
        "sourceType": "module"
    },
    "plugins": ["babel", "react"],
    "rules": {
        "arrow-parens": [2, "always"],
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "curly": [2, "all"],
        "camelcase": 2,
        "dot-location": [1, "property"],
        "dot-notation": 2,
        "eol-last": 2,
        "eqeqeq": 2,
        "indent": [2, 4, { "SwitchCase": 1 }],
        "keyword-spacing": 2,
        "key-spacing": 2,
        "linebreak-style": [2, "unix"],
        "no-alert": 2,
        "no-console": 0,
        "no-else-return": 1,
        "no-empty": [2, { "allowEmptyCatch": true }],
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": [2, { "allow": ["!!"] }],
        "no-implied-eval": 2,
        "babel/no-invalid-this": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-assign": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unmodified-loop-condition": 2,
        "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
        "no-unused-vars": [2, { "argsIgnorePattern": "reject|err" }],
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-escape": 2,
        "no-void": 2,
        "no-var": 2,
        "one-var": [2, "never"],
        "prefer-const": 2,
        "prefer-arrow-callback": 2,
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "space-in-parens": [2, "never"],
        "yoda": 2,
        "react/no-danger": 1,
        "react/prefer-es6-class": 2,
        "react/require-render-return": 2,
        "react/self-closing-comp": 2,
        "react/no-did-mount-set-state": 1,
        "react/no-unused-prop-types": [2, { "skipShapeProps": true }],
        "react/no-string-refs": 2,
        "react/sort-comp": 2,
        "react/jsx-first-prop-new-line": [1, "multiline"],
        "react/jsx-wrap-multilines": 2,
        "react/jsx-max-props-per-line": [1, { "maximum": 3 }],
        "react/jsx-indent": 2,
        "react/jsx-equals-spacing": 2,
        "react/jsx-pascal-case": 2
    }
}
